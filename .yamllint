---
# reference: https://yamllint.readthedocs.io/

extends: "default"

ignore: |
 .gitlab-ci.yml

rules:
  braces:
    max-spaces-inside: 1
    level: "error"

  brackets:
    max-spaces-inside: 1
    level: "error"

  line-length:
    level: "warning"

  new-line-at-end-of-file:
    level: "warning"

  quoted-strings:
    quote-type: "double"
    required: only-when-needed
    extra-required: ["^(?:(?!(var_)).)*$"]

  truthy:
    level: "error"
